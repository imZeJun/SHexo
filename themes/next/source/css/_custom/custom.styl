// Custom styles.
.post {
   margin-top: 60px;
   margin-bottom: 60px;
   padding: 25px;
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}
//``分割的样式。
code {
    color: #000000;
    background: #FFFFFF;
    margin: 2px;
}
//代码块的样式。
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 6px;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6;
}
